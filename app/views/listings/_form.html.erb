<%= form_with(model: @listing, data: {turbo: false}) do |f| %>
  <fieldset class="mb-2">
    <%= f.label('Truck Image') %><br>
    <%= f.file_field(:truck_img) %>
    <br>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label(:title) %><br>
    <%= f.text_field(:title) %>
    <br>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :listing_description %><br>
    <%= f.text_area :listing_description %>
    <br>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label 'Price (in $ per hour)' %><br>
    <%= f.number_field :price %>

  </fieldset>
  <fieldset class="mb-2">
    <%= f.label('Menu Image') %><br>
    <%= f.file_field(:menu_img) %>
    <br>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label('Categories') %><br>
    <%= f.collection_check_boxes(:category_ids, @categories, :id, :name) %>
    <br>
  </fieldset>

  <fieldset class="mb-2">
    <%= f.submit class: 'btn btn-primary' %>    
  </fieldset>
  
<% end %>