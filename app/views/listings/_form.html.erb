<%= form_with(model: @listing, data: {turbo: false}) do |t| %>
  <fieldset class="mb-2">
    <%= t.label :title %>
    <%= t.text_field :title %>
  </fieldset>
  <fieldset class="mb-2">
    <%= t.label :author_id %>
    <%
        # collection_select takes 4 params:
        #   1. The attribute name in this model (book) to store the selected id in
        #   2. The collection from which to build the options
        #   3. The attribute in the collection items to use as the value of the option
        #   4. The attribute in the collection items to use as the caption of the option
    %>
    <%= t.collection_select :author_id, @authors, :id, :full_name %>
  </fieldset>
  <fieldset class="mb-2">
    <%= t.label :cover %>
    <%= t.file_field :cover %>
  </fieldset>
  <% if @book.cover.attached? %>
    <fieldset class="mb-2">
      <%= cl_image_tag @book.cover.key, crop: 'limit', width: 350, height: 100, cloud_name: 'drupfl3sx' %>
    </fieldset>
  <% end %>
  <fieldset>
    <%= t.submit class: 'btn btn-primary' %>    
  </fieldset>
<% end %>