<%= form_with(model: @listing, data: {turbo: false}) do |f| %>
  <fieldset class="mb-2">
    <%= f.label(:title) %>:
    <br>
    <%= f.text_field(:title) %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :listing_description %>:
    <br>
    <%= f.text_area :listing_description %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :price %>:
    <br>
    $ <%= f.number_field :price %> /hour
  </fieldset>
  <fieldset class="mb-2">
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  </fieldset>
  <fieldset>
    <%# <%= f.collection_select :user_profile_id, @users, :id, :name %> %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.submit class: 'btn btn-primary' %>    
  </fieldset>
  
<% end %>