<%= form_with(model: @booking, url: new_booking_path, data: {turbo: false}) do |f| %>
  <fieldset class="mb-2">
    <%= f.label(:address) %>:
    <br>
    <%= f.text_field(:address) %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label 'Booking Date' %>:
    <br>
    <%= f.date_field :date %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label 'Additional Comments' %>:
    <br>
    <%= f.text_area :comments %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.submit class: 'btn btn-primary' %>    
  </fieldset>
<% end %>